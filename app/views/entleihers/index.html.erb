<% @entleihers.each do |entleiher| %>
  <tr>
    <td><%= entleiher.anschrift %></td>
    <td><%= entleiher.bearbeiter %></td>
    <td><%= entleiher.email %></td>
    <td><%= entleiher.heimatanschrift %></td>
    <td><%= entleiher.matrikelnr %></td>
    <td><%= entleiher.mobiltelefon %></td>
    <td><%= entleiher.name %></td>
    <td><%= entleiher.status %></td>
    <td><%= entleiher.telefon %></td>
    <td><%= entleiher.telefon2 %></td>
    <td><%= entleiher.ub_nr %></td>
    <td><%= entleiher.vermerke %></td>
    <td><%= entleiher.lendings.count %></td>
    <td><%= entleiher.lendings.select(&:overdue?).count %></td>
    <td><%= link_to 'Show', entleiher %></td>
    <td><%= link_to 'Edit', edit_entleiher_path(entleiher) %></td>
    <td><%= link_to 'Destroy', entleiher, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

