<div class="inner">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Anschrift:</b>
    <%= @entleiher.anschrift %>
  </p>

  <p>
    <b>Bearbeiter:</b>
    <%= @entleiher.bearbeiter %>
  </p>

  <p>
    <b>Email:</b>
    <%= @entleiher.email %>
  </p>

  <p>
    <b>Heimatanschrift:</b>
    <%= @entleiher.heimatanschrift %>
  </p>

  <p>
    <b>Matrikelnr:</b>
    <%= @entleiher.matrikelnr %>
  </p>

  <p>
    <b>Mobiltelefon:</b>
    <%= @entleiher.mobiltelefon %>
  </p>

  <p>
    <b>Name:</b>
    <%= @entleiher.name %>
  </p>

  <p>
    <b>Status:</b>
    <%= @entleiher.status %>
  </p>

  <p>
    <b>Telefon:</b>
    <%= @entleiher.telefon %>
  </p>

  <p>
    <b>Telefon2:</b>
    <%= @entleiher.telefon2 %>
  </p>

  <p>
    <b>Ub nr:</b>
    <%= @entleiher.ub_nr %>
  </p>

  <p>
    <b>Vermerke:</b>
    <%= @entleiher.vermerke %>
  </p>

  <p>
    <b>Entliehene Bücher</b>
    <table class="table">
      <tr>
        <th>Buch</th><th>Überfällig</th><th>Zurückgeben</th>
      </tr>
      <% @entleiher.lendings.reject(&:returned?).each do |lending| %>
        <tr class="<%= lending.overdue? ? "overdue" : "" %>">
          <td><%=link_to lending.buch.titel, lending.buch %></td><td><%= lending.overdue? ? "Ja" : "Nein" %></td>
          <td>
            <%= form_for lending, :url => return_lending_path(lending) do %>
              <button class="button">
                Buch zurückgeben
              </button>
            <% end -%>
          </td>
        </tr>
      <% end %>
    </table>
  </p>


  <%= link_to 'Edit', edit_entleiher_path(@entleiher) %> |
  <%= link_to 'Back', entleihers_path %>
</div>
